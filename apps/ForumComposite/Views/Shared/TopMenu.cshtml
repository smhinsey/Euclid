<div class="Tabs DiscussionsTabs">
	<ul>
		<li class="Active">@Html.ActionLink("All Discussions", "List", "Post")</li>
		@if (Request.IsAuthenticated)
		{
			<li><a href="@Url.Action("MyDiscussions", "Profile")" class="MyDiscussions">My Discussions<span>@ViewBag.PostCount</span></a></li>
			<li class="add-discussion">@Html.ActionLink("Start a new discussion", "Create", "Post")</li>
		}
		else
		{
			<li class="add-discussion">@Html.ActionLink("Sign in", "SignIn", "Authentication", null, new { @class = "SignInPopup" })</li>
		}
	</ul>
	<!--
		<div class="SubTab"><span class="FirstCrumb">↳ </span>Nested Category</div>
		-->
</div>