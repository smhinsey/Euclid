@model ForumComposite.ViewModels.Category.AllCategoriesViewModel
@{
	ViewBag.Title = ForumName + " - Categories";
	Layout = "~/Views/Shared/_ForumLayout.cshtml";
	ViewBag.CategoriesClass = "active";
}
<ul class="breadcrumb">
	<li><a href="@Url.RouteUrl("Home")">@ForumName Home</a> <span class="divider">/</span></li>
	<li class="active">Categories</li>
</ul>
<h1>Categories</h1>
<hr />

@{
	var catCount = 0;
}

@foreach(var category in Categories)
{
	if(catCount % 3 == 0)
	{
		@:<div class="row">
	}
	
	<div class="span5">
		<h2><a href="@Url.RouteUrl("Category", new { categorySlug = category.Slug })">@category.Name</a></h2>
		<p>A brief description of the category.</p>
		@for (var i = 1; i < 5; i++)
		{
			@RenderPage("~/Views/Shared/PostTile.cshtml", new { Size = "Medium", Mode = "Condensed", Post = new ForumAgent.ReadModels.Post() { Title = "{Post Title}", Body = "A truncated post body. Etiam porta sem malesuada magna mollis euismod."} })
		}
		<a href="#">View</a> 33 more posts.
	</div>

		if (catCount % 3 == 2)
		{
			@:</div><hr/>
		}

	{
		catCount++;
	}
}

<hr />

<div class="pagination">
	<ul>
		<li class="prev disabled"><a href="#">&larr; Previous</a></li>
		<li><a href="#">1</a></li>
		<li class="active"><a href="#">2</a></li>
		<li><a href="#">3</a></li>
		<li class="disabled"><a href="#">...</a></li>
		<li><a href="#">45</a></li>
		<li><a href="#">46</a></li>
		<li><a href="#">47</a></li>
		<li class="next"><a href="#">Next &rarr;</a></li>
	</ul>
</div>