@model ForumComposite.ViewModels.Category.CategoryDetailsViewModel
@{
	ViewBag.Title = ForumName + " - " + Model.Name;
	Layout = "~/Views/Shared/_ForumLayout.cshtml";
	ViewBag.CategoriesClass = "active";
}
<ul class="breadcrumb">
	<li><a href="@Url.RouteUrl("Home")">@ForumName Home</a> <span class="divider">/</span></li>
	<li><a href="@Url.RouteUrl("Categories")">Categories</a> <span class="divider">/</span></li>
	<li class="active">@Model.Name</li>
</ul>
<h1>@Model.Name</h1>
<hr />
<p><small>(Custom category content.)</small></p>

@{
	var postCount = 0;
}

@foreach(var post in Model.Listing.Posts){

	if (postCount % 4 == 0)
		{
			@:<div class="row">
		}

			<div class="span4">
				@RenderPage("~/Views/Shared/PostTile.cshtml", new { Size = "Small", Post = post })
			</div>

		if (postCount % 4 == 3)
		{
			@:</div><hr/>
		}

	{
		postCount++;
	}
}

<div class="pagination">
	<ul>
		<li class="prev disabled"><a href="#">&larr; Previous</a></li>
		<li><a href="#">1</a></li>
		<li class="active"><a href="#">2</a></li>
		<li><a href="#">3</a></li>
		<li class="disabled"><a href="#">...</a></li>
		<li><a href="#">45</a></li>
		<li><a href="#">46</a></li>
		<li><a href="#">47</a></li>
		<li class="next"><a href="#">Next &rarr;</a></li>
	</ul>
</div>