@using ForumComposite.Models
@model SignInInputModel
@{
	ViewBag.Title = "Sign in to the forum";
}

<div id="DiscussionForm">
	<h2>Sign In to the Forum</h2>
	@using (Html.BeginForm("Authenticate", "Authentication", FormMethod.Post))
	{
		<div>

			<div>
				@Html.LabelFor(m => m.Username)
				@Html.TextBoxFor(m => m.Username, new { @class = "InputBox", maxlength = "100", id = "Form_Name" })
			</div>

			<div>
				@Html.LabelFor(m => m.Password)
				@Html.PasswordFor(m => m.Password, new { @class = "InputBox", maxlength = "100", id = "Form_Name" })
			</div>

			<div class="Buttons">
				<input type="submit" id="Form_PostComment" name="Comment/Post_Comment" value="Sign In"
							 class="Button CommentButton" />
				@Html.ActionLink("Register An Account", "Register")
			</div>

		</div>
	}
</div>