@using Euclid.Composites.Mvc.Extensions
@using ForumComposite.Models
@model PublishPostInputModel

@{
	ViewBag.Title = "Start a new discussion";
}

<h2>Start a New Discussion</h2>
@using (Html.BeginFormForInputModel(Model))
{
        <div>
            @Html.LabelFor(m=>m.Title)
            @Html.TextBoxFor(m=>m.Title)
        </div>

        <div>
            @Html.LabelFor(m=>m.Body)
            @Html.TextAreaFor(m=>m.Body)
        </div>

	<div class="PostFormControlPanel">
		<input type="submit" id="Form_PostDiscussion" name="Discussion/Post_Discussion" value="Post Discussion" class="Button DiscussionButton" />
		<input type="submit" id="Form_SaveDraft" name="Discussion/Save_Draft" value="Save Draft" class="Button DraftButton" />
		<input type="submit" id="Form_Preview" name="Discussion/Preview" value="Preview" class="Button PreviewButton" />
	</div>
}