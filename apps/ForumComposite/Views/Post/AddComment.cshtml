@using Euclid.Composites.Mvc.Extensions
@using ForumComposite.Models
@model CommentOnPostInputModel
@{
	ViewBag.Title = "Add a Comment";
}

<div id="DiscussionForm">
	<h2>Write Comment</h2>
	@using (Html.BeginFormForInputModel(Model, true, Request.UrlReferrer.AbsoluteUri))
 {
		@Html.HiddenFor(m => m.PostIdentifier)
	 
		<div>
			<div>
				@Html.LabelFor(m => m.Title)
				@Html.TextBoxFor(m => m.Title, new { @class = "InputBox", maxlength = "100", id = "Form_Name" })
			</div>

			<div>
				@Html.LabelFor(m => m.Body)
				@Html.TextAreaFor(m => m.Body, new { @class = "TextBox", rows = "6", cols = "100", id = "Form_Body" })
			</div>

			<div class="Buttons">
				<input type="submit" id="Form_PostComment" name="Comment/Post_Comment" value="Post Comment"
					class="Button CommentButton" />
					<a href="#" class="Back">Back to Discussions</a>
			</div>

		</div>

 }
</div>

