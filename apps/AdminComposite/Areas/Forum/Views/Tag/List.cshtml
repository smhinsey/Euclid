@using System.Globalization
@using AdminComposite.Areas.Forum.InputModels
@model ForumAgent.ReadModels.AvailableTags
@{
	ViewBag.Title = "Manage Forum Tags";
	((PaginationModel)ViewBag.Pagination).ColSpan = 3;
	((PaginationModel)ViewBag.Pagination).WriteTFoot = false;
	((PaginationModel)ViewBag.Pagination).WriteTable = false;
	((PaginationModel)ViewBag.Pagination).WriteTr = false;
}

<script type="text/javascript">
	$(document).ready(function() {

		$("#create-tag").click(function() {
			EUCLID.showModalForm({ Url: "@Url.Action("NewTag", "Tag")?forumId=@Model.ForumIdentifier"});
			return false;
		});

		$(".edit").click(function() {
			var categoryId = $(this).attr("data-tag-id");

			$("<div></div>")
				.load("@Url.Action("UpdateTag", "Tag")?tagId=" + categoryId)
				.modal({
					autoResize: true,
					autoPosition: true,
					position: new Array(25, 300),
					dataCss: { backgroundColor: "#fff", overflow: "hidden", height: 485, width: 635 },
					containerCss: { height: 500, width: 650 },
					onClose: function(dialog) {
						window.location.href = window.location.href;
					}
				});
			return false;
		});


		$("#save").click(function() {
			$("#save").attr("disabled", "disabled");
			var inputModel;
			try {
				inputModel = EUCLID.getModel({ commandName: "ActivateTag" });
			} catch(e) {
				EUCLID.displayError("Unable to get model for ActivateTag command", e.name + "<br />" + e.message);
				return false;
			}

			$(".tag-active").each(function(index, item) {
				var tagId = $(item).attr("data-item-id");
				var active = $(item).is(":checked");
				var currentName = $(item).attr("data-item-name");

				try {
					inputModel.TagIdentifier = tagId;
					inputModel.Active = active;
					EUCLID.publish(inputModel);
				} catch(e) {
					EUCLID.displayError("Unable to activate tag '" + currentName + "'", e.name + "<br />" + e.message);
				}
			});

			setTimeout("$('#save').removeAttr('disabled');", 750);
			return false;
		});
	});
</script>

<article>
	<header>
		<h2>@ViewBag.Title</h2>
	</header>

	<section>
		<p style="float: left">View, add, edit, and activate tags for this forum</p>
		<a href="#" style="float: right" class="button-link blue" id="create-tag">Add Tag</a>
	</section>
	
	<table id="category-table">
		<thead>
			<tr>
				<th>Active</th>
				<th>Name</th>
				<th>Posts</th>
				<th></th>
			</tr>
		</thead>
		@if (Model.TotalTags == 0)
		{
			<tbody class="no-table-data">
				<tr>
					<td colspan="4">There are no tags in this forum, create one using the blue button above.</td>
				</tr>
			</tbody>
		}
		else
		{
			<tfoot>
				<tr>
					<td>
						<ul class="button-switch">
							<li><button type="button" id="save">Save</button></li>
						</ul>
					</td>
					@Html.Partial("_pagination")
				</tr>
			</tfoot>
			<tbody>
				@foreach (var tag in Model.Tags)
				{
					<tr>
						<td>@Html.CheckBoxFor(m => tag.Active, new { @class = "tag-active", data_item_id = tag.Identifier, data_item_name = tag.Name })</td>
						<td><span data-category-id="@tag.Identifier">@tag.Name</span></td>
						<td>@tag.TotalPosts</td>
						<td>
							<ul class="actions">
								<li><a href="#" class="edit" data-tag-id="@tag.Identifier" rel="tooltip" original-title="Edit Tag">edit tag</a></li>
							</ul>
						</td>
					</tr>
				}
			</tbody>
		}
	</table>
</article>

@section Breadcrumbs{
	<ul id="breadcrumbs">
		<li>@Html.ActionLink("Home", "Index", "Dashboard")</li>
		<li>@CultureInfo.CurrentCulture.TextInfo.ToTitleCase(Model.ForumName)</li>
		<li>@ViewBag.Title</li>
	</ul>
}