@using ForumAgent.ReadModels
@model IList<Category>
		   
<script type="text/javascript">
	$(document).ready(function () {
		$("#create-category").click(function () {
			$("<div></div>")
				.load("@Url.Action("NewCategory")?forumId=@ViewContext.RouteData.Values["forumId"]")
				.modal({
					autoResize: true,
					autoPosition: true,
					position: new Array(25, 300),
					dataCss: { backgroundColor: "#fff", overflow: "hidden", height: 485, width: 635 },
					containerCss: { height: 500, width: 650 },
					onClose: function (dialog) {
						window.location.href = window.location.href;
					}
				});

			return false;
		});

		$(".edit").click(function() {
			var categoryId = $(this).attr("data-category-id");
			
			$("<div></div>")
				.load("@Url.Action("UpdateCategory")?categoryId=" + categoryId)
				.modal({
					autoResize: true,
					autoPosition: true,
					position: new Array(25, 300),
					dataCss: { backgroundColor: "#fff", overflow: "hidden", height: 485, width: 635 },
					containerCss: { height: 500, width: 650 },
					onClose: function (dialog) {
						window.location.href = window.location.href;
					}
				});
			return false;
		});


		$("#update").click(function() {
			$(".category-active").each(function(index, item) {
				var categoryId = $(item).attr("data-item-id");
				var active = $(item).is(":checked");

				$.get("@Url.Action("ActivateCategory")", { categoryId: categoryId, active: active });
			});

			return false;
		});
	});
</script>

<article>
	<header>
		<h2>Manage Forum Categories</h2>
	</header>

	<section>
		<p style="float:left">View, add, edit, and activate categories for this forum</p>
		<a href="#" style="float:right" class="button-link blue" id="create-category">Add Category</a>
	</section>
	
	<table id="category-table">
		<thead>
			<tr>
				<th>Active</th>
				<th>Name</th>
				<th>Slug</th>
				<th></th>
			</tr>
		</thead>
		<tfoot>
			<tr>
				<td colspan="4">
					<ul class="button-switch">
						<li><button type="button" id="update">Save</button></li>
					</ul>
				</td>
			</tr>
		</tfoot>
		<tbody>
			@foreach (var category in Model)
			{
			<tr>
				<td>@Html.CheckBoxFor(m=>category.Active, new {@class="category-active", data_item_id=@category.Identifier})</td>
				<td><span data-category-id="@category.Identifier">@category.Name</span></td>
				<td><span data-category-id="@category.Identifier">@category.Slug</span></td>
				<td>
					<ul class="actions">
						<li><a href="#" class="edit" data-category-id="@category.Identifier" rel="tooltip" original-title="Edit Category">edit category</a></li>
					</ul>
				</td>
			</tr>
			}
		</tbody>
	</table>
</article>

@section Breadcrumbs{
	<ul id="breadcrumbs">
		<li>@Html.ActionLink("Home", "Index", "Dashboard")</li>
		<li>@ViewBag.ForumName</li>
		<li>Categories</li>
	</ul>
}