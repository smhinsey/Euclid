@using ForumAgent.ReadModels
@model IList<Category>
		   
<script type="text/javascript">
	$(document).ready(function () {
		$("#create-category").click(function () {
			$("<div></div>")
				.load("@Url.Action("NewCategory")?forumId=@ViewContext.RouteData.Values["forumId"]")
				.modal({
					autoResize: true,
					autoPosition: true,
					position: new Array(25, 300),
					dataCss: { backgroundColor: "#fff", overflow: "hidden", height: 485, width: 635 },
					containerCss: { height: 500, width: 650 },
					onClose: function (dialog) {
						window.location.href = window.location.href;
					}
				});

			return false;
		});

		$(".edit").click(function() {
			var categoryId = $(this).attr("data-category-id");
			
			$("<div></div>")
				.load("@Url.Action("UpdateCategory")?categoryId=" + categoryId)
				.modal({
					autoResize: true,
					autoPosition: true,
					position: new Array(25, 300),
					dataCss: { backgroundColor: "#fff", overflow: "hidden", height: 485, width: 635 },
					containerCss: { height: 500, width: 650 },
					onClose: function (dialog) {
						window.location.href = window.location.href;
					}
				});
			return false;
		});
	});
</script>

<article>
	<header>
		<h2>Manage Forum Categories</h2>
	</header>
	<p>View, edit, activate and create categories for this forum</p>
	<table id="category-table">
		<thead>
			<tr>
				<th>Active</th>
				<th>Name</th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			@foreach (var category in Model)
			{
			<tr>
				<td>@if(category.Active){ <text>Yes</text> }else{ <text>No</text> }</td>
				<td><span data-category-id="@category.Identifier">@category.Name</span></td>
				<td>
					<ul class="actions">
						<li><a href="#" class="edit" data-category-id="@category.Identifier" rel="tooltip" original-title="Edit Category">edit category</a></li>
					</ul>
				</td>
			</tr>
			}
		</tbody>
	</table>

	<button type="button" id="create-category">New Category</button>
</article>

@section Breadcrumbs{
	<ul id="breadcrumbs">
		<li>@Html.ActionLink("Home", "Index", "Dashboard")</li>
		<li>Categories</li>
	</ul>
}