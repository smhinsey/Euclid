@model object
@{
	ViewBag.Title = "Configure Authentication Providers";
}
<article>
	<header>
		<h2>@ViewBag.Title</h2>
	</header>
	<p>An active authentication provider can be used by new users to register and authenticate accounts with your forum.</p>
	<section>
		<table>
			<thead>
				<tr>
					<th><input type="checkbox" class="check-all"/></th>
					<th>Name</th>
				</tr>
			</thead>
			<tbody>
				<tr>
					<td>
						<input type="checkbox" /></td>
					<td>Facebook</td>
				</tr>
				<tr>
					<td>
						<input type="checkbox" /></td>
					<td>OAuth</td>
				</tr>
				<tr>
					<td>
						<input type="checkbox" /></td>
					<td>Google</td>
				</tr>
				<tr>
					<td>
						<input type="checkbox" /></td>
					<td>Twitter</td>
				</tr>
				<tr>
					<td>
						<input type="checkbox" /></td>
					<td>Azure ACS</td>
				</tr>
				<tr>
					<td>
						<input type="checkbox" /></td>
					<td>Active Directory</td>
				</tr>
			</tbody>
		</table>
		<p>Warning: if you disable an authentication provider that users have already used
			to register with, those users will no longer have access to the forum. </p>
		<p>
			<input type="button" class="button" value="Save" style="float: right" />
		</p>
	</section>
</article>
