@{
	ViewBag.Title = "Signin to the admin";
	Layout = "~/Views/Shared/_AnonymousLayout.cshtml";
}

@section bodyClass {
	login
}

<a href="/" title="Back to Homepage"></a>

<!-- Login box -->
<article id="login-box">
		
	<div class="article-container">
			
		<p>Lorem ipsum dolor sit amet, consectetur adipiscing elit. Suspendisse et dignissim metus. Maecenas id augue ac metus tempus aliquam. </p>
				
		<!-- Notification -->
		@if (!string.IsNullOrEmpty(ViewBag.Error))
		{
			<div class="notification error">
				<a href="#" class="close-notification" rel="tooltip" original-title="Hide Notification">x</a>
				<p><strong>Error</strong> @ViewBag.Error</p>
			</div>
		}
		<!-- /Notification -->
			
		@using (Html.BeginForm())
		{
			<form action="#">
				<fieldset>
					<dl>
						<dt>
							<label>Username</label>
						</dt>
						<dd>
							<input type="text" class="large" name="username">
						</dd>
						<dt>
							<label>Password</label>
						</dt>
						<dd>
							<input type="password" class="large" name="password">
						</dd>
						<dt class="checkbox"><label>Remeber me</label></dt>
						<dd><input type="checkbox"></dd>
					</dl>
				</fieldset>
				<input type="submit" class="right" id="signin" value="Log in" />
			</form>
		}
	</div>
		
</article>
<!-- /Login box -->

<ul class="login-links">
	<li><a href="@Url.Action("ForgotPassword", "User")">Forgot Password</a></li>
	<li><a href="@Url.Action("Create", "User")">Signup</a></li>
</ul>