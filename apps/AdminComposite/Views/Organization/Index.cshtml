@model object

<script type="text/javascript">
	$(document).ready(function () {
		$("#add-user").click(function () {
			$("<div></div>")
				.load("/Organization/GetUser")
				.dialog({
					modal: true,
					title: "Add User",
					width: 650,
					height: 800
				});

			return false;
		});

		$("#organization-details .organization-detail").each(function (index, item) {
			var inputClass = $(item).attr("id") == "organization-name" ? "organization-name-form" : "";
			$(item).editable(function (value, settings) {
				console.log($(this).attr("id") + ".value = " + value);

				return value;
			}, {
				tooltip: $(this).attr("data-tooltip"),
				cssclass: inputClass
			});
		});

		$(".edit").click(function () {
			var organizationId = "11111111-1111-1111-1111-111111111111";
			$("<div></div>")
				.load("/Organization/GetUser?organizationId=" + organizationId + "&userId=" + $(this).attr("data-user-id"))
				.dialog({
						modal: true,
						title: $(this).attr("data-user-name"),
						width: 650,
						height: 800
			});
		});
	});

</script>

