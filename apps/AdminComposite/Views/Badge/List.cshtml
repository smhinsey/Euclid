@model object

@{
	ViewBag.Title = string.Format("Badges for {0}", Request.QueryString["forumId"]);
}

<script type="text/javascript">
	$(document).ready(function () {
		$("#badge-type-select").tabs();

		$("#create-badge").click(function () {
			$("#custom-badge-tab").click();

			$("<div></div>")
				.load("/Badge/NewBadge")
				.dialog({
					modal: true,
					title: "New Badge",
					width: 650,
					height: 250
				});
		});
	});
</script>

<article>
	<header>
		<h2>@ViewBag.Title</h2>
		<input type="button" id="create-badge" class="button" value="New Badge" style="float:right"/>
	</header>
</article>

<div id="badge-type-select">
	<ul>
		<li><a href="#system-badges" id="system-badge-tab" class="active">System</a></li>
		<li><a href="#custom-badges" id="custom-badge-tab">Custom</a></li>
	</ul>

	<div id="system-badges">
		<table>
			<thead>
				<tr>
					<th><input type="checkbox" class="check-all"/></th>
					<th>Badge</th>
				</tr>
			</thead>
			<tbody>
				<tr>
					<td><input type="checkbox"/></td>
					<td>Lifetime Achievement Award</td>
				</tr>
				<tr>
					<td><input type="checkbox"/></td>
					<td>Key Contributor</td>
				</tr>
				<tr>
					<td><input type="checkbox"/></td>
					<td>I've Got Something to Say</td>
				</tr>
				<tr>
					<td><input type="checkbox"/></td>
					<td>Conversation Starter</td>
				</tr>
				<tr>
					<td><input type="checkbox"/></td>
					<td>Well Received Post</td>
				</tr>
				<tr>
					<td><input type="checkbox"/></td>
					<td>The Never Ending Thread</td>
				</tr>
			</tbody>
		</table>
	</div>

	<div id="custom-badges">
		<table>
			<thead>
				<tr>
					<th>Badge</th>
					<th>Trigger</th>
					<th>Criteria</th>
					<th>Value</th>
					<th>&nbsp;</th>
				</tr>
			</thead>
			<tbody>
				<tr>
					<td>Old Timer</td>
					<td>User.Created</td>
					<td>>=</td>
					<td>[Today] - 365</td>
					<td>
						<select multiple="multiple" class="badge-availability">
							<option>Forum 1</option>
							<option>Forum 2</option>
							<option>Forum 3</option>
						</select>

						<a href="#">Delete</a>
					</td>
				</tr>
				<tr>
					<td>OCD</td>
					<td>User.ConsecutiveDays</td>
					<td>>=</td>
					<td>200</td>
					<td>
						<select multiple="multiple" class="badge-availability">
							<option>Forum 1</option>
							<option>Forum 2</option>
							<option>Forum 3</option>
						</select>

						<a href="#">Delete</a>
					</td>
				</tr>
			</tbody>
		</table>
	</div>
</div>


@section Breadcrumbs {
	<ul id="breadcrumbs">
		<li><a href="@Url.Action("Index", "Dashboard")" title="Back to Homepage">Home</a></li>
		<li>@ViewBag.Title</li>
	</ul>
}