@using AdminComposite.Models
@using ForumAgent.ReadModels
@model AvailableContent
@{
	ViewBag.Title = "Manage Forum Content";
	((PaginationModel)ViewBag.Pagination).ColSpan = 3;
	((PaginationModel)ViewBag.Pagination).WriteTFoot = false;
	((PaginationModel)ViewBag.Pagination).WriteTable = false;
	((PaginationModel)ViewBag.Pagination).WriteTr = false;
}
<script type="text/javascript" src="@Url.Content("~/Content/jquery.timers-1.2.js")"></script>
<script type="text/javascript">
	$(document).ready(function() {
		$("#add-content").click(function() {
			$("<div></div>")
				.load("@Url.Action("NewContent", "Content", new { forumId = Model.ForumIdentifier })")
				.modal({
						autoResize: true,
						autoPosition: true,
						position: new Array(25, 300),
						dataCss: { backgroundColor: "#fff", overflow: "hidden", height: 585, width: 525 },
						containerCss: { height: 600, width: 540 }
					});

			return false;
		});
		
		$(".edit").click(function() {
			var contentId = $(this).attr("data-item-id");
			$("<div></div>")
				.load("@Url.Action("UpdateContent", "Content")?contentId=" + contentId)
				.modal({
						autoResize: true,
						autoPosition: true,
						position: new Array(25, 300),
						dataCss: { backgroundColor: "#fff", overflow: "hidden", height: 585, width: 525 },
						containerCss: { height: 600, width: 540 }
					});

			return false;
		});

		$(".preview").click(function() {
			var contentId = $(this).attr("data-item-id");
			$("<div></div>")
				.load("@Url.Action("Preview")?contentId=" + contentId)
				.modal({
						autoResize: true,
						autoPosition: true,
						position: new Array(25, 300),
						dataCss: { backgroundColor: "#fff", overflow: "hidden", height: 585, width: 525 },
						containerCss: { height: 600, width: 540 }
					});

			return false;
		});

		$("#save").click(function() {
			$("#save").attr("disabled", "disabled");
			var inputModel;
			try 
			{
				inputModel = EUCLID.getModel({commandName: "ActivateContent"});
			} catch(e) {
				EUCLID.displayError("Unable to get model for command 'ActivateContent'", e.name + "<br />" + e.message);
				return false;
			}

			$(".content-active").each(function(index, item) {
				var contentId = $(item).attr("data-item-id");
				var active = $(item).is(":checked");
				var currentName = $(item).attr("data-item-name");

				try
				{
					inputModel.ContentIdentifier = contentId;
					inputModel.Active = active;
					EUCLID.publish(inputModel);
				} catch(e) {
					EUCLID.displayError("Unable to activate content item '" + currentName + "'", e.name + "<br />" + e.message);
				}
				$.get("@Url.Action("ActivateContent")", { contentId: contentId, active: active });
			});

			setTimeout("$('#save').removeAttr('disabled');", 750);
			return false;
		});
	});

	function deleteContent(contentId) {
		var inputModel;
		try 
		{
			inputModel = EUCLID.getModel({ commandName: "DeleteForumContent" });
		} catch(e) {
			EUCLID.displayError("Unable to get model for command DeleteForumContent", e.name +  "<br />" + e.message);
			return false;
		}

		try{
			inputModel.ContentIdentifier = contentId;
			EUCLID.publish(inputModel);
		} catch(e) {
			EUCLID.displayError("Unable to delete content", e.name + "<br />" + e.message);
			return false;
		}
		
		window.location.reload();
	}
</script>

<article>
	<header>
		<h2>@ViewBag.Title</h2>
	</header>

	<section>
		<p style="float:left">View, add, edit, and activate content for this forum</p>
		<a style="float:right" href="#" class="button-link blue" id="add-content">Add Content</a>
	</section>

	<table>
		<thead>
			<tr>
				<th>Active</th>
				<th>Location</th>
				<th>Type</th>
				<th>&nbsp;</th>
			</tr>
		</thead>
		@if (Model.TotalContentItems == 0)
		{
			<tbody class="no-table-data">
				<tr>
					<td colspan="4">There are no content items in this forum, create one using the blue button above.</td>
				</tr>
			</tbody>
		}
		else
		{
			<tfoot>
				<tr>
					<td>
						<ul class="button-switch">
							<li><button type="button" id="save">Save</button></li>
						</ul>
					</td>
					@Html.Partial("_Pagination")
				</tr>
			</tfoot>
			<tbody>
				@foreach (var content in Model.ContentItems)
				{
					<tr>
						<td>@Html.CheckBoxFor(m => content.Active, new {@class = "content-active", data_item_id = @content.Identifier, data_item_name=string.Format("{0} - {1}", @content.Identifier, @content.ContentLocation) })</td>
						<td>@content.ContentLocation</td>
						<td>@content.ContentType</td>
						<td>
							<ul class="actions">
								<li><a class="edit" rel="tooltip" href="#" original-title="Edit" data-item-id="@content.Identifier">Edit</a></li>
								<li><a class="admin-delete confirmation-dialog" href="#" rel="tooltip" original-title="Delete" data-confirmation-message="Do you want to delete this content?" data-confirm-function="deleteContent" data-item-id="@content.Identifier">Delete</a></li>
								<li><a class="preview" data-item-id="@content.Identifier" href="#" rel="tooltip" original-title="Preview">Delete</a></li>
							</ul>
						</td>
					</tr>
				}
			</tbody>
		}
	</table>
</article>
@section Breadcrumbs{
	<ul id="breadcrumbs">
		<li>@Html.ActionLink("Home", "Index", "Dashboard")</li>
		<li>@System.Globalization.CultureInfo.CurrentCulture.TextInfo.ToTitleCase(Model.ForumName)</li>
		<li>@ViewBag.Title</li>
	</ul>
}