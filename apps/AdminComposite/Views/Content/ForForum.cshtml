@model object

<script type="text/javascript">
	$(document).ready(function() {
		$("#add-content").click(function() {
			$("<div></div>")
				.load("@Url.Action("NewContent", "Content", new {forumId = "11111111-1111-1111-1111-111111111111"})")
				.modal({
					autoResize: true,
					autoPosition: true,
					position: new Array(25, 300),
					dataCss: { backgroundColor: "#fff", overflow: "auto",  height: 585, width: 525 },
					containerCss: { height: 600, width: 540}
				});


			return false;
		});
	});
	
	function deleteContent(contentId) {
		alert("deleting: " + contentId);
	}
</script>

<article>
	<header>
		<h2>Content for Forum</h2>
	</header>
</article>

<section>
	<table>
		<thead>
			<tr>
				<th>Location</th>
				<th>Type</th>
				<th>&nbsp;</th>
			</tr>
		</thead>
		<tbody>
			<tr>
				<td>Home Page - Header</td>
				<td>Rich Text</td>
				<td>
					<ul class="actions">
						<li><a class="edit" rel="tooltip" href="#" original-title="Edit">Edit</a></li>
						<li><a class="admin-delete" href="#" rel="tooltip" original-title="Delete" data-confirmation-message="Do you want to delete this content?" data-confirm-function="deleteContent" data-item-id="11111111-1111-1111-1111-111111111111">Delete</a></li>
						<li><a class="preview" href="#" rel="tooltip" original-title="Preview">Delete</a></li>
					</ul>
				</td>
			</tr>

			<tr>
				<td>Home Page - Content Area</td>
				<td>Embedded YouTube</td>
				<td>
					<ul class="actions">
						<li><a class="edit" rel="tooltip" href="#" original-title="Edit">Edit</a></li>
						<li><a class="admin-delete" href="#" rel="tooltip" original-title="Delete" data-confirmation-message="Do you want to delete this content?" data-confirm-function="deleteContent" data-item-id="22222222-2222-2222-2222-222222222222">Delete</a></li>
						<li><a class="preview" href="#" rel="tooltip" original-title="Preview">Delete</a></li>
					</ul>
				</td>
			</tr>
		</tbody>
	</table>

	<button type="submit" id="add-content">Add Content</button>
</section>
