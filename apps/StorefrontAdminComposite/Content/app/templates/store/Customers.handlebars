<script id="template-Customers" type="text/x-handlebars-template">
	<h3>{{storeName}} Customers</h3>
	<hr/>
	<table class="table table-striped">
		<thead>
			<tr>
				{{#each tableHeaders}}
				<th>{{this}}</th>
				{{/each}}
			</tr>
		</thead>
		<tbody>

			{{#each tableData}}
			<tr>
				<td>{{this.email}}</td>
				<td>{{this.username}}</td>
				<td>{{this.signupDate}}</td>
				<td>{{this.totalPurchaseAmount}}</td>
				<td>
					<div class="btn-group">
						<a class="btn small" href="#">Action</a>
						<a class="btn small dropdown-toggle" data-toggle="dropdown" href="#">
							<span class="caret"></span>
						</a>
						<ul class="dropdown-menu">
							<li>
								<a>View Profile</a>
							</li>
							<li>
								<a>Ban</a>
							</li>
							<li>
								<a>Reset Password</a>
							</li>
							<li>
								<a>Reset Email</a>
							</li>
						</ul>
					</div>
				</td>
			</tr>
			{{/each}}

		</tbody>
		<tfoot>
			<tr>
				<td colspan="6">
					<button class="btn primary pull-right">Invite Customer</button>
				</td>
			</tr>
		</tfoot>
	</table>
</script>